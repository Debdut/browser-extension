{
  "name": "preact-chrome-extension",
  "version": "1.0.0",
  "description": "Preact Chrome Extension Boilerplate",
  "scripts": {
    "test": "mocha",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production webpack",
    "build:chrome": "NODE_ENV=development webpack --config ./webpack/chrome.js",
    "build:firefox": "NODE_ENV=development webpack --config ./webpack/firefox.js",
    "build:safari": "NODE_ENV=development webpack --config ./webpack/safari.js",
    "start": "NODE_ENV=development webpack -w",
    "start:chrome": "NODE_ENV=development webpack --config ./webpack/chrome.js -w",
    "start:firefox": "NODE_ENV=development webpack --config ./webpack/firefox.js -w",
    "start:safari": "NODE_ENV=development webpack --config ./webpack/safari.js -w"
  },
  "author": "Debdut Karmakar <iawaiponly@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-transform-react-jsx": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@types/chrome": "^0.0.172",
    "autoprefixer": "^10.4.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel": "^6.23.0",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "dotenv": "^10.0.0",
    "generate-json-from-js-webpack-plugin": "^0.1.1",
    "html-webpack-plugin": "^5.5.0",
    "node-sass": "^7.0.0",
    "postcss-loader": "^6.2.1",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.7",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.65.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "preact": "^10.6.4"
  }
}
